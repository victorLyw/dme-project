// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  background-size: 100% 100%
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")
    background-size: 100% 100%

// 固定全屏
pos-fixed-screen()
  position absolute
  top 0
  bottom 0
  left 0
  right 0

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
